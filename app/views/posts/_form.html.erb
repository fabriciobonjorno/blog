<%= form_with(model: post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :author%>
    <%= form.text_field :author, :value=>current_user.email, class: 'form-control', :readonly => true%>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 5 %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary', data: { disable_with: 'Criando....âŒ›'}%>
    <%= link_to 'Cancelar', posts_path, class: 'btn btn-danger' %>
  </div>
<% end %>
